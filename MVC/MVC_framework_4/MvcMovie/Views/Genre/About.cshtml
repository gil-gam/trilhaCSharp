@model IEnumerable<MvcMovie.ViewModels.GenreDataInfo>

@{
    ViewBag.Title = "About";
}

<h2>About</h2>

<p>
    @Html.ActionLink("Back", "Index")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Count
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.GenreName
            </td>
            <td>
                @item.GenreCount
            </td>

        </tr>
    }

</table>
