@model SupplierViewModel
@{ ViewData["Title"] = "Details"; }

<h1>@ViewData["Title"]</h1>
<br />
<br />

<table>
    <tr>
        <td>Person : </td>
        <td><label>@Model.PersonType</label></td>
    </tr>
    <tr>
        <td>Nome Fantasia : </td>
        <td><label>@Model.FantasyName</label></td>
    </tr>

    @if (Model.PersonType == SupplierViewModel.Physical)
    {
<tr>
            <td>Name : </td>
            <td><label>@Model.FullName</label></td>
            </tr>
            <tr>
                <td>Cpf : </td>
                <td><label>@Model.Cpf</label></td>
            </tr>
            <tr>
                <td>Birthdate : </td>
                <td><label>@Model.BirthDate</label></td>
            </tr>
     }
     else
     {
            <tr>
                <td>Company Name : </td>
                <td><label>@Model.CompanyName</label></td>
            </tr>
            <tr>
                <td>Cnpj : </td>
                <td><label>@Model.Cnpj</label></td>
            </tr>
            <tr>
                <td>Open Date : </td>
                <td><label>@Model.OpenDate</label></td>
            </tr>
}


    <tr>
        <td>Cellphone : </td>
        <td><label>@Model.Telephone</label></td>
    </tr>
    <tr>
        <td>Address : </td>
        <td><label>@Model.Address?.ToString()</label></td>
    </tr>
</table>

<a asp-action="Index" class="btn btn-primary">Back to the list</a>