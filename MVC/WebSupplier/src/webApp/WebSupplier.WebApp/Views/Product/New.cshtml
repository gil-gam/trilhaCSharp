@model NewProductViewModel
@{
    ViewData["Title"] = "New Product";
}

<h1>@ViewData["Title"]</h1>
<br />
<br />

<vc:summary></vc:summary>

<form asp-action="New" method="post" enctype="multipart/form-data">

    <div class="form-row">
        <div class="form-group col-md-10">
            <label asp-for="Supplier"></label>
            <select asp-for="SupplierId" asp-items="@(new SelectList(Model.ListSupplier,"Id","FantasyName"))" class="form-control">
                <option></option>
            </select>
            <span asp-validation-for="SupplierId" class="alert-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-10">
            <label asp-for="Category"></label>
            <select asp-for="CategoryId" asp-items="@(new SelectList(Model.ListCategory,"Id","Name"))" class="form-control">
                <option></option>
            </select>
            <span asp-validation-for="CategoryId" class="alert-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-5">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control">
            <span asp-validation-for="Name" class="alert-danger"></span>
        </div>
        <div class="form-group col-md-5">
            <label asp-for="BarCode"></label>
            <input asp-for="BarCode" type="text" class="form-control">
            <span asp-validation-for="BarCode" class="alert-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="PricePurchase"></label>
            <input asp-for="PricePurchase" type="text" class="form-control">
            <span asp-validation-for="PricePurchase" class="alert-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="PriceSales"></label>
            <input asp-for="PriceSales" type="text" class="form-control">
            <span asp-validation-for="PriceSales" class="alert-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="QuantityStock"></label>
            <input asp-for="QuantityStock" type="text" class="form-control">
            <span asp-validation-for="QuantityStock" class="alert-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" asp-for="Active" checked>
                <label class="form-check-label" asp-for="Active">Ativo</label>
            </div>
        </div>
    </div>

    <br />

    <button type="submit" class="btn btn-success">Register</button>
    <a asp-action="Index" class="btn btn-primary">Back to the List</a>
</form>


@section Scripts {

            @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }

}
